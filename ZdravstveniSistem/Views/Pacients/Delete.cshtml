@model ZdravstveniSistem.Models.Pacient
<link href="~/Content/ÇustomFontByMarko.css" rel="stylesheet" />
@{
    ViewBag.Title = "Delete";
}

<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />

<div class="min-h-screen bg-gray-100 flex items-center justify-center py-10" style="background:border-box">
    <div class="bg-white p-8 rounded-2xl shadow-xl w-full max-w-2xl">
        <h2 class="text-2xl font-bold mb-6 text-red-600">Ali ste prepričani, da želite izbrisati tega pacienta?</h2>

        <div class="grid grid-cols-2 gap-y-4 text-gray-700 text-sm mb-6">
            <div class="font-semibold">Ime:</div>
            <div>@Html.DisplayFor(model => model.Ime)</div>

            <div class="font-semibold">Priimek:</div>
            <div>@Html.DisplayFor(model => model.Priimek)</div>

            <div class="font-semibold">Datum rojstva:</div>
            <div>@Html.DisplayFor(model => model.DatumRojstva)</div>

            <div class="font-semibold">Spol:</div>
            <div>@Html.DisplayFor(model => model.Spol)</div>

            <div class="font-semibold">Telefonska številka:</div>
            <div>@Html.DisplayFor(model => model.TelefonskaStevilka)</div>

            <div class="font-semibold">Email:</div>
            <div>@Html.DisplayFor(model => model.Email)</div>

            <div class="font-semibold">Naslov:</div>
            <div>@Html.DisplayFor(model => model.Naslov)</div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="flex justify-between items-center">
                <input type="submit" value="Izbriši" class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-6 rounded-lg transition-all duration-200" />
                @Html.ActionLink("Nazaj na seznam", "Index", null, new { @class = "text-blue-600 hover:underline" })
            </div>
        }
    </div>
</div>
