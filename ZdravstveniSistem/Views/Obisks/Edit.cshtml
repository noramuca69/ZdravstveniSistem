@model ZdravstveniSistem.Models.Obisk

@{
    ViewBag.Title = "Uredi obisk";
}

<link href="~/Content/ÇustomFontByMarko.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />

<div class="min-h-screen bg-gray-100 flex items-center justify-center py-10" style="background:border-box">
    <div class="bg-white p-8 rounded-2xl shadow-xl w-full max-w-2xl">
        <h2 class="text-2xl font-bold mb-6 text-gray-800">Uredi obisk</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="space-y-6">
                @Html.HiddenFor(model => model.Id)

                <div>
                    @Html.LabelFor(model => model.DatumObiska, "Datum obiska", htmlAttributes: new { @class = "text-gray-700 font-semibold" })
                    <div class="mt-1">
                        @Html.TextBoxFor(model => model.DatumObiska, "{0:dd.MM.yyyy}", new { @class = "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:border-blue-300", id = "DatumObiska", type= "date" })
                        @Html.ValidationMessageFor(model => model.DatumObiska, "", new { @class = "text-red-500 text-sm" })
                    </div>
                </div>

                <div>
                    @Html.LabelFor(model => model.RazlogObiska,"Razlog obiska", htmlAttributes: new { @class = "text-gray-700 font-semibold" })
                    <div class="mt-1">
                        @Html.EditorFor(model => model.RazlogObiska, new { htmlAttributes = new { @class = "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:border-blue-300" } })
                        @Html.ValidationMessageFor(model => model.RazlogObiska, "", new { @class = "text-red-500 text-sm" })
                    </div>
                </div>

                <div>
                    @Html.LabelFor(model => model.Diagnoza, htmlAttributes: new { @class = "text-gray-700 font-semibold" })
                    <div class="mt-1">
                        @Html.EditorFor(model => model.Diagnoza, new { htmlAttributes = new { @class = "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:border-blue-300" } })
                        @Html.ValidationMessageFor(model => model.Diagnoza, "", new { @class = "text-red-500 text-sm" })
                    </div>
                </div>

                <div>
                    @Html.LabelFor(model => model.Opombe, htmlAttributes: new { @class = "text-gray-700 font-semibold" })
                    <div class="mt-1">
                        @Html.EditorFor(model => model.Opombe, new { htmlAttributes = new { @class = "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:border-blue-300" } })
                        @Html.ValidationMessageFor(model => model.Opombe, "", new { @class = "text-red-500 text-sm" })
                    </div>
                </div>

                <div>
                    @Html.LabelFor(model => model.PacientId, "Pacient", htmlAttributes: new { @class = "text-gray-700 font-semibold" })
                    <div class="mt-1">
                        @Html.DropDownListFor(model => model.PacientId,
                            null,
                            new { @class = "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:border-blue-300" }
                        )
                        @Html.ValidationMessageFor(model => model.PacientId, "", new { @class = "text-red-500 text-sm" })
                    </div>
                </div>

                <div>
                    @Html.LabelFor(model => model.ZdravnikId, "Zdravnik", htmlAttributes: new { @class = "text-gray-700 font-semibold" })
                    <div class="mt-1">
                        @Html.DropDownListFor(model => model.ZdravnikId,
                            null,
                            new { @class = "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:border-blue-300" }
                        )
                        @Html.ValidationMessageFor(model => model.ZdravnikId, "", new { @class = "text-red-500 text-sm" })
                    </div>
                </div>

                <div class="flex justify-between">
                    <input type="submit" value="Shrani" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg transition-all duration-200" />
                    @Html.ActionLink("Nazaj na seznam", "Index", null, new { @class = "text-blue-600 hover:underline self-center" })
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
