@model ZdravstveniSistem.Models.Zdravnik

<link href="~/Content/ÇustomFontByMarko.css" rel="stylesheet" />
@{
    ViewBag.Title = "Edit";
}

<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />

<div class="min-h-screen bg-gray-100 flex items-center justify-center py-10" style="background:border-box">
    <div class="bg-white p-8 rounded-2xl shadow-xl w-full max-w-2xl">
        <h2 class="text-3xl font-bold text-gray-800 mb-6">Uredi zdravnika</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div>
                @Html.ValidationSummary(true, "", new { @class = "text-red-600 mb-4" })
                @Html.HiddenFor(model => model.Id)

                <div class="mb-4">
                    @Html.LabelFor(model => model.Ime, htmlAttributes: new { @class = "block text-gray-600 font-medium" })
                    @Html.EditorFor(model => model.Ime, new { htmlAttributes = new { @class = "mt-1 p-2 w-full border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" } })
                    @Html.ValidationMessageFor(model => model.Ime, "", new { @class = "text-red-600" })
                </div>

                <div class="mb-4">
                    @Html.LabelFor(model => model.Priimek, htmlAttributes: new { @class = "block text-gray-600 font-medium" })
                    @Html.EditorFor(model => model.Priimek, new { htmlAttributes = new { @class = "mt-1 p-2 w-full border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" } })
                    @Html.ValidationMessageFor(model => model.Priimek, "", new { @class = "text-red-600" })
                </div>

                <div class="mb-4">
                    @Html.LabelFor(model => model.Specializacija, htmlAttributes: new { @class = "block text-gray-600 font-medium" })
                    @Html.EditorFor(model => model.Specializacija, new { htmlAttributes = new { @class = "mt-1 p-2 w-full border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" } })
                    @Html.ValidationMessageFor(model => model.Specializacija, "", new { @class = "text-red-600" })
                </div>

                <div class="mb-4">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "block text-gray-600 font-medium" })
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "mt-1 p-2 w-full border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-red-600" })
                </div>

                <div class="mb-4">
                    @Html.LabelFor(model => model.TelefonskaStevilka,"Telefonska stevilka", htmlAttributes: new { @class = "block text-gray-600 font-medium" })
                    @Html.EditorFor(model => model.TelefonskaStevilka, new { htmlAttributes = new { @class = "mt-1 p-2 w-full border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" } })
                    @Html.ValidationMessageFor(model => model.TelefonskaStevilka, "", new { @class = "text-red-600" })
                </div>

                <div class="mb-4">
                    @Html.LabelFor(model => model.LetoZaposlitve,"Leto zaposlitve", htmlAttributes: new { @class = "block text-gray-600 font-medium" })
                    @Html.EditorFor(model => model.LetoZaposlitve, new { htmlAttributes = new { @class = "mt-1 p-2 w-full border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" } })
                    @Html.ValidationMessageFor(model => model.LetoZaposlitve, "", new { @class = "text-red-600" })
                </div>

                <div class="flex justify-between">
                    <input type="submit" value="Shrani" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg transition-all duration-200" />
                    @Html.ActionLink("Nazaj na seznam", "Index", null, new { @class = "text-blue-600 hover:underline self-center" })
                </div>
            </div>
        }
        <!-- Close the form tag here -->
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
