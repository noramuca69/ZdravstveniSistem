@model ZdravstveniSistem.Models.Pacient
<link href="~/Content/ÇustomFontByMarko.css" rel="stylesheet" />
@{
    ViewBag.Title = "Uredi";
}

<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />

<div class="min-h-screen bg-gray-100 flex items-center justify-center py-10" style="background: border-box">
    <div class="bg-white p-8 rounded-2xl shadow-xl w-full max-w-2xl">
        <h2 class="text-2xl font-bold mb-6 text-gray-800">Uredi Pacienta</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
    <div class="space-y-6">
        @Html.HiddenFor(model => model.Id)
        <div>
            @Html.LabelFor(model => model.Ime, htmlAttributes: new { @class = "text-gray-700 font-semibold" })
            <div class="mt-1">
                @Html.EditorFor(model => model.Ime, new { htmlAttributes = new { @class = "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:border-blue-300" } })
                @Html.ValidationMessageFor(model => model.Ime, "", new { @class = "text-red-500 text-sm" })
            </div>
        </div>
        <div>
            @Html.LabelFor(model => model.Priimek, htmlAttributes: new { @class = "text-gray-700 font-semibold" })
            <div class="mt-1">
                @Html.EditorFor(model => model.Priimek, new { htmlAttributes = new { @class = "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:border-blue-300" } })
                @Html.ValidationMessageFor(model => model.Priimek, "", new { @class = "text-red-500 text-sm" })
            </div>
        </div>
        <div>
            @Html.LabelFor(model => model.DatumRojstva, "Datum rojstva", htmlAttributes: new { @class = "text-gray-700 font-semibold" })
            <div class="mt-1">
                @Html.EditorFor(model => model.DatumRojstva, new { htmlAttributes = new { @class = "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:border-blue-300", type = "date" } })
                @Html.ValidationMessageFor(model => model.DatumRojstva, "", new { @class = "text-red-500 text-sm" })
            </div>
        </div>

        <div>
            @Html.LabelFor(model => model.Spol, htmlAttributes: new { @class = "text-gray-700 font-semibold" })
            <div class="mt-1">
                @Html.DropDownListFor(model => model.Spol,
                    new SelectList(new[] {
                        new { Value = "Moški", Text = "Moški" },
                        new { Value = "Ženski", Text = "Ženski" }
                    }, "Value", "Text"),
                    "",
                    new { @class = "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:border-blue-300" }
                )
                @Html.ValidationMessageFor(model => model.Spol, "", new { @class = "text-red-500 text-sm" })
            </div>
        </div>
        <div>
            @Html.LabelFor(model => model.TelefonskaStevilka, htmlAttributes: new { @class = "text-gray-700 font-semibold" })
            <div class="mt-1">
                @Html.EditorFor(model => model.TelefonskaStevilka,"Telefonska številka", new { htmlAttributes = new { @class = "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:border-blue-300" } })
                @Html.ValidationMessageFor(model => model.TelefonskaStevilka, "", new { @class = "text-red-500 text-sm" })
            </div>
        </div>
        <div>
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "text-gray-700 font-semibold" })
            <div class="mt-1">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:border-blue-300" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-red-500 text-sm" })
            </div>
        </div>
        <div>
            @Html.LabelFor(model => model.Naslov, htmlAttributes: new { @class = "text-gray-700 font-semibold" })
            <div class="mt-1">
                @Html.EditorFor(model => model.Naslov, new { htmlAttributes = new { @class = "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:border-blue-300" } })
                @Html.ValidationMessageFor(model => model.Naslov, "", new { @class = "text-red-500 text-sm" })
            </div>
        </div>
        <div class="flex justify-between">
            <input type="submit" value="Shrani" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg transition-all duration-200" />
            @Html.ActionLink("Nazaj na seznam", "Index", null, new { @class = "text-blue-600 hover:underline self-center" })
        </div>
    </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
