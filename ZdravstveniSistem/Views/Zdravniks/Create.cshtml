@model ZdravstveniSistem.Models.Zdravnik

@{
    ViewBag.Title = "Create";
}

<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<link href="~/Content/ÇustomFontByMarko.css" rel="stylesheet" />

<div style="background:border-box" class="min-h-screen bg-gray-100 flex items-center justify-center py-8">
    <div class="bg-white p-8 rounded-2xl shadow-xl w-full max-w-2xl">
        <h2 class="text-2xl font-bold mb-6 text-gray-800">Dodaj novega zdravnika</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-red-500 mb-4" })

            <div class="grid grid-cols-1 gap-5">
                <div>
                    <label class="block text-gray-700 font-medium mb-1">Ime</label>
                    @Html.EditorFor(model => model.Ime, new { htmlAttributes = new { @class = "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:border-blue-300" } })
                    @Html.ValidationMessageFor(model => model.Ime, "", new { @class = "text-red-500 text-sm" })
                </div>

                <div>
                    <label class="block text-gray-700 font-medium mb-1">Priimek</label>
                    @Html.EditorFor(model => model.Priimek, new { htmlAttributes = new { @class = "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:border-blue-300" } })
                    @Html.ValidationMessageFor(model => model.Priimek, "", new { @class = "text-red-500 text-sm" })
                </div>

                <div>
                    <label class="block text-gray-700 font-medium mb-1">Specializacija</label>
                    @Html.EditorFor(model => model.Specializacija, new { htmlAttributes = new { @class = "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:border-blue-300" } })
                    @Html.ValidationMessageFor(model => model.Specializacija, "", new { @class = "text-red-500 text-sm" })
                </div>

                <div>
                    <label class="block text-gray-700 font-medium mb-1">E-pošta</label>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:border-blue-300" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-red-500 text-sm" })
                </div>

                <div>
                    <label class="block text-gray-700 font-medium mb-1">Telefonska številka</label>
                    @Html.EditorFor(model => model.TelefonskaStevilka, new { htmlAttributes = new { @class = "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:border-blue-300" } })
                    @Html.ValidationMessageFor(model => model.TelefonskaStevilka, "", new { @class = "text-red-500 text-sm" })
                </div>

                <div>
                    <label class="block text-gray-700 font-medium mb-1">Leto zaposlitve</label>
                    @Html.EditorFor(model => model.LetoZaposlitve, new { htmlAttributes = new { @class = "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:border-blue-300" } })
                    @Html.ValidationMessageFor(model => model.LetoZaposlitve, "", new { @class = "text-red-500 text-sm" })
                </div>
            </div>

            <div class="mt-6 flex justify-between items-center">
                <input type="submit" value="Ustvari" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg transition-all duration-200" />
                @Html.ActionLink("Nazaj na seznam", "Index", null, new { @class = "text-blue-600 hover:underline" })
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
