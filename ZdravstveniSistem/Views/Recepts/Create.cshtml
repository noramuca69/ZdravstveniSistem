@model ZdravstveniSistem.Models.Recept

<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<link href="~/Content/ÇustomFontByMarko.css" rel="stylesheet" />

@{
    ViewBag.Title = "Create";
}

<div style="background:border-box" class="min-h-screen bg-gray-100 flex items-center justify-center py-8">
    <div class="bg-white p-8 rounded-2xl shadow-xl w-full max-w-2xl">
        <h2 class="text-2xl font-bold mb-6 text-gray-800">Dodaj nov recept</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-red-500 mb-4" })

            <div class="grid grid-cols-1 gap-5">
                <div>
                    @Html.LabelFor(model => model.ImeZdravila,"Ime zdravila", new { @class = "block text-gray-700 font-medium mb-1" })
                    @Html.EditorFor(model => model.ImeZdravila, new { htmlAttributes = new { @class = "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:border-blue-300" } })
                    @Html.ValidationMessageFor(model => model.ImeZdravila, "", new { @class = "text-red-500 text-sm" })
                </div>

                <div>
                    @Html.LabelFor(model => model.Doziranje, new { @class = "block text-gray-700 font-medium mb-1" })
                    @Html.EditorFor(model => model.Doziranje, new { htmlAttributes = new { @class = "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:border-blue-300" } })
                    @Html.ValidationMessageFor(model => model.Doziranje, "", new { @class = "text-red-500 text-sm" })
                </div>

                <div>
                    @Html.LabelFor(model => model.DneviJemanja,"Dnevi Jemanja", new { @class = "block text-gray-700 font-medium mb-1" })
                    @Html.EditorFor(model => model.DneviJemanja, new { htmlAttributes = new { @class = "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:border-blue-300" } })
                    @Html.ValidationMessageFor(model => model.DneviJemanja, "", new { @class = "text-red-500 text-sm" })
                </div>

                <div>
                    @Html.LabelFor(model => model.Navodila, new { @class = "block text-gray-700 font-medium mb-1" })
                    @Html.EditorFor(model => model.Navodila, new { htmlAttributes = new { @class = "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:border-blue-300" } })
                    @Html.ValidationMessageFor(model => model.Navodila, "", new { @class = "text-red-500 text-sm" })
                </div>

                <div>
                    @Html.LabelFor(model => model.ObiskId, "Obisk", new { @class = "block text-gray-700 font-medium mb-1" })
                    @Html.DropDownList("ObiskId", null, new { @class = "w-full px-4 py-2 border rounded-lg shadow-sm bg-white focus:outline-none focus:ring focus:border-blue-300" })
                    @Html.ValidationMessageFor(model => model.ObiskId, "", new { @class = "text-red-500 text-sm" })
                </div>
            </div>

            <div class="mt-6 flex justify-between items-center">
                <input type="submit" value="Ustvari" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg transition-all duration-200" />
                @Html.ActionLink("Nazaj na seznam", "Index", null, new { @class = "text-blue-600 hover:underline" })
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
