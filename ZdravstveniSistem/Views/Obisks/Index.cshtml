@model IEnumerable<ZdravstveniSistem.Models.Obisk>

@{
    ViewBag.Title = "Seznam obiskov";
}
<link href="~/Content/ÇustomFontByMarko.css" rel="stylesheet" />
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 style="font-size: 50px ;color:gainsboro" class="fw-bold">Seznam obiskov</h2>
        @Html.ActionLink("Dodaj obisk", "Create", null, new { @class = "btn btn-primary rounded-pill px-4 shadow BoldText bi bi-plus-lg" })
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body" style="background: gainsboro;">
                        <h5 class="card-title mb-2 text-dark">
                            <i class="bi bi-person-fill"></i> @item.Pacient.Ime @item.Pacient.Priimek
                        </h5>
                        <p class="card-text mb-1"><strong><i class="bi bi-person-badge-fill"></i> Zdravnik:</strong> @item.Zdravnik.Ime @item.Zdravnik.Priimek</p>
                        <p class="card-text mb-1"><strong><i class="bi bi-calendar-check-fill"></i> Datum obiska:</strong> @item.DatumObiska.ToString("dd.MM.yyyy")</p>
                        <p class="card-text mb-1"><strong><i class="bi bi-chat-left-dots"></i> Razlog:</strong> @item.RazlogObiska</p>
                        <p class="card-text mb-1"><strong><i class="bi bi-clipboard-check"></i> Diagnoza:</strong> @item.Diagnoza</p>
                        <p class="card-text"><strong><i class="bi bi-journal-text"></i> Opombe:</strong> @item.Opombe</p>

                        <div class="d-flex justify-content-between mt-3">
                            @Html.ActionLink(" Uredi", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-warning btn-sm rounded-pill bi bi-pencil" })
                            @Html.ActionLink(" Podrobnosti", "Details", new { id = item.Id }, new { @class = "btn btn-outline-primary btn-sm rounded-pill bi bi-eye-fill" })
                            @Html.ActionLink(" Izbriši", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger btn-sm rounded-pill bi bi-trash" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
