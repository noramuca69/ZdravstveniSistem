@model ZdravstveniSistem.Models.Obisk

@{
    ViewBag.Title = "Podrobnosti obiska";
}

<link href="~/Content/ÇustomFontByMarko.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />

<div class="min-h-screen bg-gray-100 flex items-center justify-center py-10" style="background:border-box">
    <div class="bg-white p-8 rounded-2xl shadow-xl w-full max-w-2xl">
        <h2 class="text-2xl font-bold mb-6 text-gray-800">Podrobnosti obiska</h2>

        <div class="grid grid-cols-2 gap-y-4 text-gray-700 text-sm mb-6">
            <div class="font-semibold">Pacient:</div>
            <div>@Html.DisplayFor(model => model.Pacient.Ime) @Html.DisplayFor(model => model.Pacient.Priimek)</div>

            <div class="font-semibold">Zdravnik:</div>
            <div>@Html.DisplayFor(model => model.Zdravnik.Ime) @Html.DisplayFor(model => model.Zdravnik.Priimek)</div>

            <div class="font-semibold">Datum obiska:</div>
            <div>@Html.DisplayFor(model => model.DatumObiska)</div>

            <div class="font-semibold">Razlog obiska:</div>
            <div>@Html.DisplayFor(model => model.RazlogObiska)</div>

            <div class="font-semibold">Diagnoza:</div>
            <div>@Html.DisplayFor(model => model.Diagnoza)</div>

            <div class="font-semibold">Opombe:</div>
            <div>@Html.DisplayFor(model => model.Opombe)</div>
        </div>

        <div class="flex justify-between mt-8">
            @Html.ActionLink("Uredi", "Edit", new { id = Model.Id }, new { @class = "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg transition-all duration-200" })
            @Html.ActionLink("Nazaj na seznam", "Index", null, new { @class = "text-blue-600 hover:underline self-center" })
        </div>
    </div>
</div>
